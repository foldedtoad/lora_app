&spi1 {
    status = "okay";
    sck-pin = <25>;
    mosi-pin = <23>;
    miso-pin = <24>;
    cs-gpios = <&gpio0 22 0>;

    sx1276@0 {
        compatible = "semtech,sx1276";
        reg = <0>;
        spi-max-frequency = <1000000>;
        label = "SX1276";
        reset-gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
        dio-gpios   = <&gpio0 12 GPIO_ACTIVE_HIGH>;
    };
};
